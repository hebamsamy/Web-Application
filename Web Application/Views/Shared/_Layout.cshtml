
<!Doctype html>
<html>
<head>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
    <title>@ViewBag.Title</title>
    @RenderSection("StylingSection",false)
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">E-Store</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/home/index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/ContactUs">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/home/AboutUs">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Product/index">Products</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container-fluid">
        <div class="row">
            <div class="col-3 bg-light text-dark">
                @RenderSection("Sidebar")
            </div>
            <div class="col-9">
                @RenderBody()
            </div>

        </div>
    </main>
    <footer class="container">
        <div class="text-center">
            Copyrights &copy; - @DateTime.Now.Year
        </div>
    </footer>
    <script src="/bootstrap/js/bootstrap.bundle.js"></script>
    @RenderSection("ScriptingSection",false)

</body>
</html>