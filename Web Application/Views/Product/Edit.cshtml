@using Models;
@model Product
@{
    List<Category> temp = ViewData["Categories"] as List<Category>;
}

<h1 class="display-1">Edit Product @Model.Name</h1>

<form asp-action="Edit" asp-controller="product" method="post">
    <input type="number" name="ID" value="@Model.ID" hidden />
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Product name</label>
        <input type="text" class="form-control" name="Name" value="@Model.Name">
    </div> <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Product Price</label>
        <input type="number" class="form-control" name="Price" value="@Model.Price">
    </div>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Product Quantity</label>
        <input type="number" class="form-control" name="Quantity" value="@Model.Quantity">
    </div> <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Product Description</label>
        <input type="text" class="form-control" name="Description" value="@Model.Description">
    </div> <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label" value="@Model.CategoryID">Product Catagory</label>
        <select class="form-control" name="CategoryID">
            @foreach (var item in temp)
            {
                <option value="@item.ID">@item.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>