
@using Models;
@model Product;
@section ScriptingSection{
    <script>
        let list = document.getElementsByClassName("carousel-item")
        list[0].classList.add("active")
    </script>
}

@section Sidebar{
    <p class="lead mt-5">@Model.Category.Name</p>
    <p class="lead mt-2">@Model.Price $</p>
    <p class="lead mt-2">@Model.Description</p>
}
<h1 class="display-1">Product @Model.Name Details</h1>
@if (Model.ProductAttachments.Count > 0)
{
    <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
            @foreach (var item in Model.ProductAttachments)
            {
                <div class="carousel-item">
                    <img src="/Images/@item.Image" class="d-block w-100" alt="...">
                </div>

            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
}
else
{
    <div class="lead">No Images Provied</div>
}